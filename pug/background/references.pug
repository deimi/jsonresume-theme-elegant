unless _.isEmpty(resume.references)
  .detail#references
    .icon
      i.fs-lg.icon-thumbs-up
      span.mobile-title References

    .info
      h4.title.text-uppercase References

      .content
        ul.list-unstyled.clear-margin
          each reference_info in resume.references
            li.card.card-nested
              if reference_info.website
                strong
                  a(href=reference_info.website, target="_blank")= reference_info.name
              else
                strong
                  |#{reference_info.name}

              mop-wrapper!= reference_info.reference

              if reference_info.email
                .reference.mail 
                  span.icon(style="vertical-align: middle;")
                    i.icon.fs-lg(class="icon-mail")
                  span.info()
                    a.link-disguise(href="mailto:" + reference_info.email, itemprop="email")= reference_info.email
